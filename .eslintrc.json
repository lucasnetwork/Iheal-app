{
  "env": {
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "rules": {
    "no-use-before-define": "off",
    "import/no-unresolved": "off",
    "react/style-prop-object": "off",
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "import/extensions": "off",
    "react/react-in-jsx-scope": "off",
    "consistent-return": "off",
    "react/prop-types": "off",
    "no-unused-vars": "off",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".ts", ".tsx"]
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "index",
          "sibling",
          "parent",
          "internal",
          "external",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "*react*/**",
            "group": "index"
          },
          {
            "pattern": "./styles",
            "group": "index"
          },
          {
            "pattern": "**/views/**",
            "group": "internal"
          },
          {
            "pattern": "**/components/**",
            "group": "sibling",
            "position": "after"
          },
          {
            "pattern": "**/services/**",
            "group": "sibling",
            "position": "before"
          }
        ]
      }
    ]
  }
}
